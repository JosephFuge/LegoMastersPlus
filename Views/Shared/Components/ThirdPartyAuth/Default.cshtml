}

@model LoginViewModel
@{
if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
    @* asp-route-returnUrl="@Model.ReturnUrl" *@
    <form id="external-account" asp-controller="Home" asp-action="ExternalLogin" method="post">
        <div>
            <p>
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button type="submit" class="google-sign-in btn-outline-info rounded-pill" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                }
            </p>
        </div>
    </form>
            }
}