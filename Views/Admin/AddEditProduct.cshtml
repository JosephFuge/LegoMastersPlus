<div class="text-center">
    @model Product

    <form method="post">
        @if (Model != null && Model.product_ID > 0)
        {
            <input asp-for="product_ID" hidden />
        }

        <!-- Name -->
        <div class="form-group row">
            <label asp-for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>

        <!-- Year -->
        <div class="form-group row">
            <label asp-for="year" class="col-sm-2 col-form-label">Year</label>
            <div class="col-sm-10">
                <input asp-for="year" class="form-control" />
                <span asp-validation-for="year" class="text-danger"></span>
            </div>
        </div>

        <!-- Number of Parts -->
        <div class="form-group row">
            <label asp-for="num_parts" class="col-sm-2 col-form-label">Number of Parts</label>
            <div class="col-sm-10">
                <input asp-for="num_parts" class="form-control" />
                <span asp-validation-for="num_parts" class="text-danger"></span>
            </div>
        </div>

        <!-- Price -->
        <div class="form-group row">
            <label asp-for="price" class="col-sm-2 col-form-label">Price</label>
            <div class="col-sm-10">
                <input asp-for="price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
        </div>

        <!-- Image Link -->
        <div class="form-group row">
            <label asp-for="img_link" class="col-sm-2 col-form-label">Image Link</label>
            <div class="col-sm-10">
                <input asp-for="img_link" class="form-control" />
                <span asp-validation-for="img_link" class="text-danger"></span>
            </div>
        </div>

        <!-- Primary Color -->
        <div class="form-group row">
            <label asp-for="primary_color" class="col-sm-2 col-form-label">Primary Color</label>
            <div class="col-sm-10">
                <input asp-for="primary_color" class="form-control" />
                <span asp-validation-for="primary_color" class="text-danger"></span>
            </div>
        </div>

        <!-- Secondary Color -->
        <div class="form-group row">
            <label asp-for="secondary_color" class="col-sm-2 col-form-label">Secondary Color</label>
            <div class="col-sm-10">
                <input asp-for="secondary_color" class="form-control" />
                <span asp-validation-for="secondary_color" class="text-danger"></span>
            </div>
        </div>

        <!-- Description -->
        <div class="form-group row">
            <label asp-for="description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <textarea asp-for="description" class="form-control"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
        </div>

        <!-- Categories -->
        <div class="form-group">
            <h5>Categories</h5>
            <div class="row w-75 d-flex mx-auto justify-content-center">
                @foreach (var category in ViewBag.Categories)
                {
                    <div class="col-sm-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="ProductCategories" value="@category.CategoryId" @((Model != null && Model.ProductCategories != null && Model.ProductCategories.Select((pc) => pc.CategoryId).ToList().Contains(category.CategoryId)) ? "checked" : "")>
                            <label class="form-check-label">@category.Name</label>
                        </div>
                    </div>
                }
            </div>
            <span asp-validation-for="ProductCategories" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="form-group row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>
