@model UsersListViewModel

<div class="row">
    <table class="table table-striped">
        <tr>
            <td></td>
            <td>Username</td>
            <td>Type</td>
            <td>Roles</td>
            <td></td>
            <td></td>
        </tr>
        @foreach (KeyValuePair<IdentityUser, IList<string>> userRoles in Model.UserRoles)
        {
            <tr>
                <td>
                    @* <img src="@tempUser" width="182" /> *@
                </td>
                <td>
                    <p>@userRoles.Key.UserName</p>
                </td>
                <td>
                    Lorem Ipsum
                </td>
                <td>
                    <p>@(userRoles.Value.Any() ? string.Join(", ", userRoles.Value) : "No Roles")</p>
                </td>
                <td>
                    <a class="rounded-pill btn bg-soft-purple btn-pill" asp-controller="Admin" asp-action="EditUser" asp-route-user-id="@userRoles.Key.Id">Edit User</a>
                </td>
                <td>
                    <a class="rounded-pill btn btn-danger btn-pill" asp-controller="Admin" asp-action="DeleteUser" asp-route-user-id="@userRoles.Key.Id">Delete User</a>
                </td>
            </tr>
        }
    </table>
</div>
<div class="row">
    <div class="col"></div>
    <div class="col d-flex justify-content-center">
        <a class="rounded-pill btn-success btn-pill" asp-controller="Admin" asp-action="AddUser">Add User</a>
    </div>
    <div class="col d-flex justify-content-end">
        <div page-model="@Model.PaginationInfo" page-action="Users" page-controller="Admin"
             page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group w-auto"></div>
    </div>
</div>