
@model List<Product>


<div class="bg-tan">
    <div class="container">
        <div class="row">
            <div class="col-4">
                <h1 class="home-h1">Welcome to the Brickwell store!</h1>
                <p class="home-p">Your ultimate destination for all things LEGO!</p>
                <a asp-area="" asp-controller="Home" asp-action="Products" class="btn btn-outline-primary btn-lg float-end">Explore Now</a>
            </div>
            <div class="col-2"></div>
            <div class="col center">
                <img src="/img/home.jpg" class="home-img" alt="image">
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div>
        <h1>Featured Products</h1>
        <div class="container horizontal-scroll">
            <div class="row">
                @foreach (var prod in Model)
                {
                    <div class="card scroll-card pe-0 justify-content-center mb-2 tan">
                        <div class="card-body product-card color-text2" style="background-color: #F6F3E7;">
                            <div class="card justify-content-center">
                                <a class="custom-product-name" asp-controller="Home" asp-action="ProductDetails" asp-route-product_ID="@prod.product_ID">
                                    <img src="@prod.img_link" alt="@prod.name" class="img-fluid product-image">
                                </a>
                            </div>
                            <a class="custom-product-name" asp-controller="Home" asp-action="ProductDetails" asp-route-product_ID="@prod.product_ID">
                                <h5 class="card-title">@prod.name</h5>
                            </a>
                            <p class="product-price">$@prod.price</p>
                            <a asp-controller="Home" asp-action="ProductDetails" asp-route-product_ID="@prod.product_ID" class="btn btn-primary">See Details</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>







