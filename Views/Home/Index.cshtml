
@model ProductsListViewModel


<div class="bg-soft-purple">
    <div class="container">
        <div class="row">
            <div class="col-2">
                <h1>Welcome to the<br>LegoMastersPlus store!</h1>
                <p>Your ultimate destination for all things LEGO!</p>
                <a href="" class="btn">Explore Now</a>
            </div>
            <div class="col-2">
                <img src="/img/home.jpg">
            </div>
        </div>
    </div>
    </div>
    <div>
        
    </div>
<div class="container">
    <div>
        <h1>Featured Products</h1>
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product-card">
                        <a class="custom-product-name" asp-controller="Home" asp-action="ProductDetails" asp-route-product_ID="@product.product_ID">
                            <img src="@product.img_link" alt="@product.name" class="img-fluid product-image">
                            <h2 class="product-title custom-product-name">@product.name</h2>
                        </a>
                        <p class="product-price">$@product.price</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>







