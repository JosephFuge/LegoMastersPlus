@{
}

@model LoginViewModel

<div class="text-center row">
    <div class="col-2"></div>
    <form method="post" class="auth-form col">
        <h2>Login</h2>
        <table>
            <tr>
                <td class="form-label"><label asp-for="Email">Email:</label></td>
                <td><input asp-for="Email" placeholder="name@example.com"/></td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.Email)</td>
            </tr>
            <tr>
                <td class="form-label"><label asp-for="Password">Password:</label></td>
                <td><input asp-for="Password" placeholder="password" /></td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.Password)</td>
            </tr>
            <tr>
                <td class="form-label"><label asp-for="RememberMe">Remember me:</label></td>
                <td><input asp-for="RememberMe" /></td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</td>
            </tr>

        </table>
        <button type="submit">Login</button>
    </form>
    <div class="col-2"></div>
</div>