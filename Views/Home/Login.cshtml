@{
}

@model LoginViewModel

<div class="login-body">
    <div class="col-sm col-md col">
        <form method="post" class="auth-form">
            <h2>Login</h2>
            <table>
                <tr>
                    <td class="form-label"><label asp-for="Email">Email:</label></td>
                    <td><input asp-for="Email" placeholder="name@example.com"/></td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.Email)</td>
                </tr>
                <tr>
                    <td class="form-label"><label asp-for="Password">Password:</label></td>
                    <td><input asp-for="Password" placeholder="password" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.Password)</td>
                </tr>
                <tr>
                    <td class="form-label"><label asp-for="RememberMe">Remember me:</label></td>
                    <td><input asp-for="RememberMe" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</td>
                </tr>
                @if (ViewBag.ShowCookieConsentButton != null && ViewBag.ShowCookieConsentButton)
                {
                    <tr>
                        <td><button type="button" class="btn btn-outline-info rounded-pill show-cookie-btn" onclick="showCookiePopup();">See Cookie Info</button></td>
                    </tr>
                }
            </table>
            <button class="btn btn-info rounded-pill login-button" type="submit">Login</button>
            @if (Model.ExternalLogins != null)
            {
                <vc:third-party-auth external-login-info="@Model.ExternalLogins.ToList()" is-login="true" />
            }
        </form>
    </div>
</div>