@{
}

@model CustomerRegisterViewModel

<div class="text-center row">
    <div class="col-2"></div>
    <form method="post" class="auth-form col">
        <h2>Register Customer</h2>
        <input asp-for="SignInAfter" hidden/>
        <table>
            <tr>
                <td class="form-label"><label asp-for="Email">Email:</label></td>
                <td><input asp-for="Email" /></td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.Email)</td>
            </tr>
            <tr>
                <td class="form-label"><label asp-for="first_name">First Name:</label></td>
                <td><input asp-for="first_name" /></td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.first_name)</td>
            </tr>
            <tr>
                <td class="form-label"><label asp-for="last_name">Last Name:</label></td>
                <td><input asp-for="last_name" /></td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.last_name)</td>
            </tr>
            <tr>
                <td class="form-label"><label asp-for="gender">Gender:</label></td>
                <td>
                    <select asp-for="gender">
                        <option value="">Select a Gender</option>
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.gender)</td>
            </tr>
            <tr>
                <td class="form-label"><label asp-for="birth_date">Birth date:</label></td>
                <td>
                    <input asp-for="birth_date" />
                </td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.birth_date)</td>
            </tr>
            <tr>
                <td class="form-label"><label asp-for="country_of_residence">Country Of Residence:</label></td>
                <td><input asp-for="country_of_residence" /></td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.country_of_residence)</td>
            </tr>
            <tr>
                <td class="form-label"><label asp-for="Password">Password:</label></td>
                <td><input asp-for="Password" /></td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.Password)</td>
            </tr>
            <tr>
                <td class="form-label"><label asp-for="ConfirmPassword">ConfirmPassword:</label></td>
                <td><input asp-for="ConfirmPassword" /></td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.ConfirmPassword)</td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</td>
            </tr>
            @if (ViewBag.ShowCookieConsentButton != null && ViewBag.ShowCookieConsentButton)
            {
                <tr>
                    <td><button type="button" class="btn btn-outline-info rounded-pill show-cookie-btn" onclick="showCookiePopup();">See Cookie Info</button></td>
                </tr>
            }

        </table>
        <button type="submit">@(ViewBag.IsEdit != null && ViewBag.IsEdit ? "Save Changes" : "Register")</button>
    </form>
    <div class="col-2"></div>
</div>