@page
@model LegoMastersPlus.Pages.CheckoutModel

@{
    Layout = "_Layout"; // Use a layout that includes Bootstrap
}

<div class="container card mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="mb-4">Order details:</h2>
            <form method="post">
                <div class="form-group">
                    <label for="Name">User Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="CountryOfTransaction">Country of Transaction:</label>
                    <input asp-for="CountryOfTransaction" class="form-control" />
                    <span asp-validation-for="CountryOfTransaction" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label for="ShippingAddress">Shipping Address:</label>
                    <input asp-for="ShippingAddress" class="form-control" />
                    <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Bank">Bank</label>
                    <input asp-for="Bank" class="form-control" />
                    <span asp-validation-for="Bank" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="TypeOfCard">Type of Card</label>
                    <select asp-for="TypeOfCard" class="form-control">
                        <option value="">Select a Card Type</option>
                        <option value="Visa">Visa</option>
                        <option value="MasterCard">MasterCard</option>
                        <!-- Add more options as necessary -->
                    </select>
                    <span asp-validation-for="TypeOfCard" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg btn-block">Place Order</button>
            </form>
            <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
        </div>
    </div>
</div>
