@page
@model LegoMastersPlus.Areas.Identity.Pages.Account.LoginWith2f

@{
    Layout = "_Layoutt";
    ViewData["Title"] = "Two-factor authentication";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<div class="container-fluid mb-lg-5 pb-lg-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center pt-5">
            <p>Your login is protected with an authenticator app. Enter your authenticator code below.</p>
        </div>
    </div>
    <div class="row justify-content-center mb-lg-5 pb-lg-5">
        <div class="col-md-4 mb-lg-5 pb-lg-5">
            <div class="mb-lg-5">
                <form method="post" class="mb-lg-5 pb-lg-5" asp-route-returnUrl="@Model.ReturnUrl">
                    <input class="pt-4" asp-for="RememberMe" type="hidden"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3 mt-2">
                        <input asp-for="Input.TwoFactorCode" class="form-control" id="TwoFactorCode" autocomplete="off"/>
                        <label for="TwoFactorCode">Authenticator Code</label>
                        <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                    </div>
                    <div class="pt-3">
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
